<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dmkstudios.manishelectronics.OrderDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/order_buttons_layout"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/location_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_horizontal_padding"
                android:paddingLeft="@dimen/activity_vertical_padding"
                android:paddingRight="@dimen/activity_vertical_padding"
                android:paddingTop="@dimen/activity_horizontal_padding" />

            <TextView
                android:id="@+id/vendor_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_horizontal_padding"
                android:paddingLeft="@dimen/activity_vertical_padding"
                android:paddingRight="@dimen/activity_vertical_padding"
                android:paddingTop="@dimen/activity_horizontal_padding"
                android:text="@string/vendor_details" />

            <Spinner
                android:id="@+id/vendor_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_horizontal_padding"
                android:paddingLeft="@dimen/activity_vertical_padding"
                android:paddingRight="@dimen/activity_vertical_padding"
                android:paddingTop="@dimen/activity_horizontal_padding" />

            <TextView
                android:id="@+id/product_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_horizontal_padding"
                android:paddingLeft="@dimen/activity_vertical_padding"
                android:paddingRight="@dimen/activity_vertical_padding"
                android:paddingTop="@dimen/activity_horizontal_padding"
                android:text="@string/select_the_product" />

            <Spinner
                android:id="@+id/product_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_horizontal_padding"
                android:paddingLeft="@dimen/activity_vertical_padding"
                android:paddingRight="@dimen/activity_vertical_padding"
                android:paddingTop="@dimen/activity_horizontal_padding" />

            <Spinner
                android:id="@+id/product_detail_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_horizontal_padding"
                android:paddingLeft="@dimen/activity_vertical_padding"
                android:paddingRight="@dimen/activity_vertical_padding"
                android:paddingTop="@dimen/activity_horizontal_padding" />

            <EditText
                android:id="@+id/product_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_horizontal_padding"
                android:paddingLeft="@dimen/activity_vertical_padding"
                android:paddingRight="@dimen/activity_vertical_padding"
                android:paddingTop="@dimen/activity_horizontal_padding" />

            <Button
                android:id="@+id/add_product_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_horizontal_padding"
                android:paddingLeft="@dimen/activity_vertical_padding"
                android:paddingRight="@dimen/activity_vertical_padding"
                android:paddingTop="@dimen/activity_horizontal_padding"
                android:text="@string/add_product"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/product_details_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_horizontal_padding"
                android:paddingLeft="@dimen/activity_vertical_padding"
                android:paddingRight="@dimen/activity_vertical_padding"
                android:paddingTop="@dimen/activity_horizontal_padding" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/order_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/order_placed_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Place Order"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/order_cancelled_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel Order"
            android:textAllCaps="false" />

    </LinearLayout>


</RelativeLayout>
